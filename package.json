{
  "name": "uncase",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.10.0",
  "description": "Wrapper of change-case to create case converter, validator and etc.",
  "keywords": [
    "camelCase",
    "capitalCase",
    "change-case",
    "constantCase",
    "converter",
    "dotCase",
    "kebabCase",
    "noCase",
    "pascalCase",
    "pascalSnakeCase",
    "pathCase",
    "sentenceCase",
    "snakeCase",
    "trainCase",
    "validate"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/uncase#readme",
  "repository": "ntnyq/uncase",
  "bugs": {
    "url": "https://github.com/ntnyq/uncase/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./is": {
      "types": "./dist/is.d.mts",
      "default": "./dist/is.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "coverage": "vitest --coverage",
    "dev": "unbuild --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "pnpm publish",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "change-case": "^5.4.4"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.2.0",
    "@ntnyq/prettier-config": "^2.0.0",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
